<?xml version="1.0" encoding="utf-8" ?>
<Imaginet>
	<Unit name="Imaginet.Units.Math.Take">
		<DisplayName>Take</DisplayName>
		<DisplayPath>/Math/Slicing and Shaping</DisplayPath>

		<Description>
			<Header>Description</Header>
			Extract a single slice at a specific index position along a specified axis, reducing the tensor by one dimension.
			
			This unit selects elements at a particular index along the chosen axis, effectively taking a cross-section of the tensor. The output shape is the same as the input shape with the selected axis removed. Negative indices are supported and count from the end (e.g., -1 is the last element).
			
			Supports float32, integer types (int8, int16, int32, uint8, uint16, uint32), and fixed-point formats (Q7, Q15, Q31). Requires input to have at least 2 dimensions.

			<Header>Usage</Header>
			Use the Take unit when you need to extract a specific slice from a dimension, such as selecting a particular time step or a specific channel from multi-channel data.

			<Header>Python implementation</Header>
			<Inline fragment="take.py:take" language="Python" />
		</Description>

		<Parameters>
			<InputSocket name="input" description="Input tensor. Supports float32, int8, int16, int32, uint8, uint16, uint32, Q7, Q15, and Q31 data types. Must have at least 2 dimensions." />
			<Int32Option name="axis" default="-1" text="Axis" >
				<Description>
					Axis along which the index is selected. Positive numbers are enumerated from right (0) to left. 
					Negative numbers are enumerated from left to right.
				</Description>
			</Int32Option>
			<Int32Option name="index" default="-1" text="Index" description="Index position to extract from the specified axis. Negative indices count from the end (e.g., -1 is the last element).">
				<Description>
					Index position to extract from the specified axis. Negative indices count from the end (e.g., -1 is the last element).
				</Description>
			</Int32Option>
			<OutputSocket name="output" shape="input.shape.remove(axis)" type="input.type" description="Output tensor containing the extracted slice. Has the same shape as input with the selected axis removed." />

			<Expression name="d0" value="input.shape.step(axis)" description="Internal parameter: Step size for iterating along the axis." />
			<Expression name="d1" value="input.shape.size(axis)" description="Internal parameter: Size of the axis dimension." />
			<Expression name="d2" value="input.shape.slot(axis)" description="Internal parameter: Number of slots in the operation." />
			<Expression name="real_index" value="index % d1" description="Internal parameter: Normalized index accounting for negative indexing." />
		</Parameters>

		<Contracts>
			<Assert test="input.shape.count &gt;= 2" error="Requires an input ({input.shape}) with two or more dimensions since it reduces one dimension." />
			<Assert test="axis &lt; input.shape.count" error="Axis ({axis}) must be one of input dimensions (0...{input.shape.count-1})." />
			<Assert test="index &lt; d1" error="Index out of range. Max is {d1-1}" />
		</Contracts>

		<Implementations>
			<Implementation language="C" fragment="take.h:take_f32" call="take_f32(input, d0, d1, d2, real_index, output)" >
				<Conditional value="output.type == System.Float32" />	
			</Implementation>
			<Implementation language="C" fragment="take.h:take_i8" call="take_i8(input, d0, d1, d2, real_index, output)" >
				<Conditional value="output.type == System.Int8 || output.type == System.Q7" />
			</Implementation>
			<Implementation language="C" fragment="take.h:take_i16" call="take_i16(input, d0, d1, d2, real_index, output)" >
				<Conditional value="output.type == System.Int16 || output.type == System.Q15" />
			</Implementation>
			<Implementation language="C" fragment="take.h:take_i32" call="take_i32(input, d0, d1, d2, real_index, output)" >
				<Conditional value="output.type == System.Int32 || output.type == System.Q31" />	
			</Implementation>
            <Implementation language="C" fragment="take.h:take_u8" call="take_u8(input, d0, d1, d2, real_index, output)" >
                <Conditional value="output.type == System.UInt8" />
            </Implementation>
            <Implementation language="C" fragment="take.h:take_u16" call="take_u16(input, d0, d1, d2, real_index, output)" >
                <Conditional value="output.type == System.UInt16" />
            </Implementation>
            <Implementation language="C" fragment="take.h:take_u32" call="take_u32(input, d0, d1, d2, real_index, output)" >
                <Conditional value="output.type == System.UInt32" />
            </Implementation>
		</Implementations>
	</Unit>
</Imaginet>